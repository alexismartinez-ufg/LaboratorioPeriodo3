@model LaboratorioPeriodo3.DB.Models.Autore

@{
    ViewData["Title"] = "Eliminar Autor";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h3>¿Estás seguro que deseas eliminar a este autor?</h3>

            <dl class="row">
                <dt class="col-sm-3">Autor ID</dt>
                <dd class="col-sm-9">@Model.AutorId</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Apellido</dt>
                <dd class="col-sm-9">@Model.Apellido</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="AutorId" />
                <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
                <a href="@Url.Action("Index", "Autor")" class="btn btn-secondary">No, Cancelar</a>
            </form>
        </div>
    </div>
</div>
